<configuration>
    <system.web>
        <compilation debug="true" targetFramework="4.0"/>
        <httpModules>
            <add name="HotGlueModule" type="HotGlue.Web.HotGlueModule, HotGlue.Web" />
        </httpModules>
        <httpHandlers>
            <add type="HotGlue.Web.HotGlueHandler, HotGlue.Web" verb="GET" path="hotglue.axd"/>
        </httpHandlers>
    </system.web>
    <system.webServer>
        <validation validateIntegratedModeConfiguration="false"/>
        <modules>
            <add name="HotGlueModule" type="HotGlue.Web.HotGlueModule, HotGlue.Web" />
        </modules>
        <handlers>
            <add name="HotGlue" type="HotGlue.Web.HotGlueHandler, HotGlue.Web" verb="GET" path="hotglue.axd"/>
        </handlers>
    </system.webServer>
</configuration>